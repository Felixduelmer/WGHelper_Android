<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:tag="KASSE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hallo! Hier kannst du nach dem Einkaufen den ausgegeben Betrag eingeben:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/kasse_wert"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="@string/kasse_wert"
            android:inputType="text"
            android:autofillHints="€"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/kasse_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:elevation="0dp"
            android:text="@string/kasse_btn"
            android:textSize="20sp" />

        <Button
            android:id="@+id/hilfe_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Hilfe"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Übersicht über die Kontostände:"
            android:textSize="20sp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/saldo_list"/>


    </LinearLayout>
</FrameLayout>